{
    "manifest_version": 3,
    "name": "YouTube Summary Extension",
    "version": "1.0",
    "description": "Automatically generate a summary for YouTube videos.",
    "permissions": ["activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  